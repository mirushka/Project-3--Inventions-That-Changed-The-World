<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_app">
        <item name="android:textSize">@dimen/Title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/normalMargin</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="buttonView">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="titel_questionView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/bigPadding</item>
        <item name="android:text">@dimen/bigText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigText</item>
    </style>

    <style name="questionView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@dimen/mediumText</item>
        <item name="android:padding">@dimen/normalPadding</item>
    </style>

    <style name="radioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:layout_marginBottom">@dimen/normalMargin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mediumText</item>
    </style>


    <style name="radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/normalPadding</item>
    </style>


    <style name="checkBoxView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/normalPadding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:background">@color/orangeTransparent</item>
    </style>


    <style name="title_activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="titleDetailsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="infoDetailsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mediumText</item>
        <item name="android:padding">@dimen/normalPadding</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
